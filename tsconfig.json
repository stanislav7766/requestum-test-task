{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "ES2018",
      "lib": [
        "esnext",
        "dom",
        "dom.iterable"
      ],
      "removeComments": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "./",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "downlevelIteration": true,
      "paths": {
        "~/components/*": ["src/components/*"],
        "~/pages/*": ["src/pages/*"],
        "~/api/*": ["src/api/*"],
        "~/assets/*": ["src/assets/*"],
        "~/config/*": ["src/config/*"],
        "~/utils/*": ["src/utils/*"],
        "~/common-styles/*": ["src/common-styles/*"],
        "~/hooks/*": ["src/hooks/*"],
        "~/stores/*": ["src/stores/*"],
        "~/types/*": ["src/types/*"],
        "~/constants/*": ["src/constants/*"],
      }
    },
    "include": [
      "./src",
      "webpack.config.ts"
    ]
  }